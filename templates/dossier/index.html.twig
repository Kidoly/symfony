{% extends 'base.html.twig' %}

{% block title %}Les photos des chatons {{ nomDuDossier }}{% endblock %}

{% block body %}
    <h1>Photos du dossier {{ nomDuDossier }}</h1>
    <div class="container text-center">
        <div class="row">
            {% for fichier in fichiers %}
                <div class="col-md-auto">
                    <div class="card" style="width: 18rem;">
                        <img src="{{ asset(fichier.pathname) }}" class="card-img-top" style="aspect-ratio: 3/3; object-fit: contain;" alt="{{ asset(fichier) }}">
                        <div class="card-body">
                            <p class="card-text">D'une taille de l'image : {{ fichier.size }} octets</p>
                            <p class="card-text">Nom de l'image : {{ fichier.filename }}</p>
                            <p class="card-text">Date de la dernière modification
                                : {{ fichier.mtime|date('d/m/Y') }}</p>
                            <p class="card-text">Date de création : {{ fichier.ctime|date('d/m/Y') }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
